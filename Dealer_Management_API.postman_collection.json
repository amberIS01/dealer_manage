{
  "info": {
    "name": "Dealer Management API",
    "description": "Collection for testing Dealer Management System APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Dealers",
      "item": [
        {
          "name": "Create Dealer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Premium Auto Dealer\",\n  \"email\": \"premium@dealer.com\",\n  \"subscriptionType\": \"PREMIUM\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/dealers",
              "host": ["{{base_url}}"],
              "path": ["api", "dealers"]
            }
          }
        },
        {
          "name": "Get All Dealers",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/dealers",
              "host": ["{{base_url}}"],
              "path": ["api", "dealers"]
            }
          }
        },
        {
          "name": "Get Dealer by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/dealers/1",
              "host": ["{{base_url}}"],
              "path": ["api", "dealers", "1"]
            }
          }
        },
        {
          "name": "Update Dealer",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Premium Dealer\",\n  \"email\": \"updated@dealer.com\",\n  \"subscriptionType\": \"BASIC\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/dealers/1",
              "host": ["{{base_url}}"],
              "path": ["api", "dealers", "1"]
            }
          }
        },
        {
          "name": "Delete Dealer",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/api/dealers/1",
              "host": ["{{base_url}}"],
              "path": ["api", "dealers", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Vehicles",
      "item": [
        {
          "name": "Create Vehicle",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dealerId\": 1,\n  \"model\": \"Toyota Camry 2024\",\n  \"price\": 35000.00,\n  \"status\": \"AVAILABLE\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/vehicles",
