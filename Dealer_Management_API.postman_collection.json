              "host": ["{{base_url}}"],
              "path": ["api", "vehicles", "dealer", "1"]
            }
          }
        },
        {
          "name": "Get Premium Dealer Vehicles",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/vehicles/premium",
              "host": ["{{base_url}}"],
              "path": ["api", "vehicles", "premium"]
            }
          }
        },
        {
          "name": "Update Vehicle",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dealerId\": 1,\n  \"model\": \"Honda Accord 2024\",\n  \"price\": 32000.00,\n  \"status\": \"SOLD\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/vehicles/1",
              "host": ["{{base_url}}"],
              "path": ["api", "vehicles", "1"]
            }
          }
        },
        {
          "name": "Delete Vehicle",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/api/vehicles/1",
              "host": ["{{base_url}}"],
              "path": ["api", "vehicles", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Initiate Payment",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dealerId\": 1,\n  \"amount\": 5000.00,\n  \"method\": \"CARD\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/payment/initiate",
              "host": ["{{base_url}}"],
              "path": ["api", "payment", "initiate"]
            }
          }
        },
        {
          "name": "Get Payment by ID",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
